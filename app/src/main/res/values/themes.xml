<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpendWise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Material Design colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="colorOnSurfaceVariant">@color/secondary_text</item>

        <!-- Material CardView default style -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

    <style name="Theme.SpendWise" parent="Base.Theme.SpendWise" />
</resources>